<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lexwilliam.moneymanager">

    <application
        android:name=".MoneyManagerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_monelytics_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_monelytics_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyManager">
        <activity
            android:name=".presentation.ui.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>